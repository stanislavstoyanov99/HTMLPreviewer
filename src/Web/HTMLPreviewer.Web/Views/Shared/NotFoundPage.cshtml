@model HttpErrorViewModel
@{
    this.ViewData["Title"] = "Page not found";
}

<div class="container">
    <br />
    <h1>Page not found: @Model.StatusCode</h1>
    <div class="container">
        <h2>We are sorry for that!</h2>
        <img src="~/images/404.png" alt="Not found page">
        <br />
        <div class="container">
            <span>
                We are sorry, the page you requested could not be found. Please go back to the homepage.
                <br />
                Thank your for your understanding!
            </span>
            <h3>
                <a asp-controller="Home" asp-action="Index">
                    <span class="badge badge-primary">Home</span>
                </a>
            </h3>
        </div>
    </div>
</div>
